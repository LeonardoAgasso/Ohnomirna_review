PATH_add local/bin
condanew(){
    conda create -n OhnomirnaEnv
    conda activate OhnomirnaEnv
    mkdir local/env
    conda env export > local/env/environment.yml
    echo Environment created
}
condaload(){
    conda env create -f local/env/environment.yml || condanew 
    conda activate OhnomirnaEnv
    echo Environment OhnomirnaEnv loaded
}

CONDA_BASE=$(conda info --base) ;
source $CONDA_BASE/etc/profile.d/conda.sh
conda activate OhnomirnaEnv || condaload
echo Environment OhnomirnaEnv activated
